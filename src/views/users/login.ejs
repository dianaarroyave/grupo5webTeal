<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <main class="login-main">
              <div class="loginForm">
                <form class="form-start" action="/login" method="POST">
                  <h2 class="title">Iniciar sesión</h2>
                  <div class="campo">
                      <input class="login_input" type="email" minlength="8" id="nombre" name="email" required /><span
                          class="barra"></span>
                      <label class="login-label">Correo electrónico</label>
                  </div>
                  <div class="campo">
                      <input class="login_input" type="password" minlength="8" id="nombre" name="password"
                          required /><span class="barra"></span>
                      <label class="login-label">Contraseña</label>
                  </div>
                  <div class="newUser">
                    <a class="newUser-btn" href="">¿Olvidaste tu contraseña?*</a>
                  </div>
                  <form action="">
                    <button class="enter-btn" type="submit" id="enter">Ingresar</button>
                  </form>
                  <form class="createUser-btn" action="/register">
                    <p class="question">¿Eres un cliente nuevo?</p>
                    <button class="enter-btn" type="submit" id="enter" href="/register">Registrate</button>
                  </form>
