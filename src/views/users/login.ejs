<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>
            <main class="login-main">
              <div class="formLogin">
                <form class="formLogin-user" action="/login" method="POST">
                  <h2 class="title">Iniciar sesión</h2>
                  <div class="campo">
                      <input class="login_input" type="email" minlength="8" id="nombre" name="email" /><span
                          class="barra"></span>
                      <label class="login-label">Correo electrónico</label>
                  </div>
                  <div class="campo">
                      <input class="login_input" type="password" minlength="8" id="nombre" name="password" /><span
                          class="barra"></span>
                      <label class="login-label">Contraseña</label>
                  </div>
                  <div class="newUser">
                      <a class="newUser-btn" href="">¿Olvidaste tu contraseña?*</a>
                  </div>
                  <button class="enter-btn" type="submit" id="enter">Ingresar</button>
                  <!-- <button class="enter-google" type="submit" id="enter">
                      Ingresar con Google
                  </button>  -->
              </form>
              <form action="/register" method="GET">
                  <p>¿Eres un cliente nuevo?</p>
                  <button class="enter-btn" type="submit" id="enter">Registrase</button>
              </form>
              </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

    </html>
