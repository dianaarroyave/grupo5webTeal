<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
      <main class="register-main">
        <form class="form" action="/main/register" method="POST" enctype="multipart/form-data">
          <h2 class="title">Crear cuenta</h2>
          <div class="campo">
            <input class="create_input" accept="image/png.image/jpeg" type="file" id="create_img" name="userImage"
              multiple /><span class="barra"></span>
            <div class="container-img">
              <img class="create_img-form" src="/images/user.png" alt="icono destacado" />
            </div>
          </div>
          <div class="campo">
            <input class="register_input" type="text" minlength="8" id="nombre" name="name" required /><span
              class="barra"></span>
            <label class="register-label">Nombre y apellido</label>
          </div>
          <div class="campo">
            <select name="documentType" class="register_document-select">
              <option>Tipo de documento</option>
              <option value="cedulaCiudadania">Cédula de ciudadanía</option>
              <option value="cedulaExtrajeria">Cédula de extranjería</option>
              <option value="pasaporte">Pasaporte</option>
              <option value="tarjetaIdentidad">Tarjeta de identidad</option>
            </select>
          </div>
          <div class="campo">
            <input type="number" id="document" name="document" required class="register_input" /><span
              class="barra"></span>
            <label class="register-label">Documento</label>
          </div>
          <div class="campo">
            <input type="email" id="email" name="email" required class="register_input" /><span class="barra"></span>
            <label class="register-label">Correo electronico</label>
          </div>
          <div class="campo">
            <input type="number" id="phone" name="phone" required class="register_input" /><span class="barra"></span>
            <label class="register-label">Telefono</label>
          </div>
          <div class="campo">
            <input class="register_input" type="date" id="fecha" name="birthDate" required />
          </div>
          <div class="campo">
            <input class="register_input" type="password" minlength="8" id="nombre" name="password" required /><span
              class="barra"></span>
            <label class="register-label">Contraseña</label>
          </div>
          <button class="enter-btn" type="submit" id="enter">Ingresar</button>
          <button class="enter-facebook" type="submit" id="enter">
            Ingresar con Facebook
          </button>
          <button class="enter-google" type="submit" id="enter">
            Ingresar con Google
          </button>
        </form>
      </main>
      <%- include('../partials/footer') %>
  </body>

  </html>
