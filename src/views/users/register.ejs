<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>

      <div class="homeContainerProfile">
        <input class="menu-profile" type="checkbox" id="menu-profile">
        <label for="menu-profile">
          <div>
            <!-- imagen de usuario -->
            <img class="profile" src="/userImages/<%= userImage.userImage %> " alt="userImage">
          </div>
        </label>
        <div>
          <a <% if(userImage.userImage=='empty.png' ){ %> href="/login" <% }else{ %> href="/userDetail" <% } %>
                class="star"><%= userImage.fullName %> </a>
        </div>
        <ul class="nav" <% if(userImage.userImage=='empty.png' ){ %> style=display:none <% } %>>
            <li>
              <a href="/userDetail" class="menu-profile__option">PERFIL</a>
            </li>
            <li>
              <a href="/passwordUpdate" class="menu-profile__option">EDITAR CONTRASEÑA</a>
            </li>
            <li>
              <form action="/closeSession" method="POST">
                <input type="submit" value="CERRAR SESIÓN" class="menu-profile__option button-close_session">
              </form>
            </li>
        </ul>
      </div>

      <main class="register-main">
        <form class="form" id="form" action="/register" method="POST" enctype="multipart/form-data">
          <h2 class="title">Crear cuenta</h2>
          <div class="campo">
            <input class="create_input" type="file" id="userImage" name="userImage" /><span class="barra"></span>
            <div id="error_msg-userImage">

            </div>
            <div class="container-img">
              <img class="create_img-form" src="/images/user.png" alt="icono destacado" />
            </div>
          </div>

          <div class="campo">
            <input class="register_input" type="text" id="fullName" name="fullName"
              value="<%= user.fullName ? user.fullName : "" %>" /><span class="barra"></span>
            <label class="register-label">Nombre y apellido</label>
            <div id="error_msg-fullName">

            </div>
          </div>

          <div class="campo">
            <select class="register_document-select" id="documentType" name="documentType">
              <option value="">Tipo de documento</option>
              <option value="cedulaCiudadania">Cédula de ciudadanía</option>
              <option value="cedulaExtrajeria">Cédula de extranjería</option>
              <option value="pasaporte">Pasaporte</option>
              <option value="tarjetaIdentidad">Tarjeta de identidad</option>
            </select>
            <div id="error_msg-documentType">

            </div>
          </div>

          <div class="campo">
            <input class="register_input" type="number" id="documentNumber" name="documentNumber" /><span
              class="barra"></span>
            <label class="register-label">Documento</label>
            <div id="error_msg-documentNumber">

            </div>
          </div>


          <div class="campo">
            <input class="register_input" type="text" id="email" name="email" /><span class="barra"></span>
            <label class="register-label">Correo electronico</label>
            <div id="error_msg-email">

            </div>
          </div>


          <div class="campo">
            <input class="register_input" type="text" id="phoneNumber" name="phoneNumber" /><span class="barra"></span>
            <label class="register-label">Telefono</label>
            <div id="error_msg-phoneNumber">

            </div>
          </div>


          <div class="campo">
            <input class="register_input" type="password" id="password" name="password"><span class="barra"></span>
            <label class="register-label">Contraseña</label>
            <div id="error_msg-password">

            </div>
          </div>

          <button class="enter-btn" type="submit" id="enter">Crear cuenta</button>
        </form>
      </main>
      <%- include('../partials/footer') %>
        <script src="/js/registerValidations.js"></script>
  </body>

  </html>