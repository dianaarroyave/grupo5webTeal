<%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
      <main class="register-main">
        <form class="formProfile" action="#">
          <h2 class="title">Perfil de usuario</h2>
          <div class="profile">
             <!-- imagen de usuario -->
          <div class="imageProfile">
            <div class="campo">
              <input class="create_input" accept="image/png.image/jpeg" type="file" id="create_img" name="productImage"
                multiple /><span class="barra"></span>
              <div class="container-img">
                <img class="create_img-form" src="/images/<%=userDetail[0].image%>" alt="icono destacado" />
              </div>
            </div>
          </div>
          <!-- Imformación usuario -->
          <div class="informationProfile">
            <div class="campo">
              <input class="register_input" type="text" minlength="8" id="nombre" name="name" required /><span
                class="barra"></span>
              <label class="register-label">Nombre y apellido</label>
            </div>
            <div class="campo">
              <select name="tipoDocumento" class="register_document-select">
                <option>Tipo de documento</option>
                <option value="cedulaCiudadania">Cédula de ciudadanía</option>
                <option value="cedulaExtrajeria">Cédula de extranjería</option>
                <option value="pasaporte">Pasaporte</option>
                <option value="tarjetaIdentidad">Tarjeta de identidad</option>
              </select>
            </div>
            <div class="campo">
              <input type="number" id="document" name="document" required class="register_input" /><span
                class="barra"></span>
              <label class="register-label">Documento</label>
            </div>
            <div class="campo">
              <input type="email" id="email" name="email" required class="register_input" /><span class="barra"></span>
              <label class="register-label">Correo electronico</label>
            </div>
            <div class="campo">
              <input type="number" id="phone" name="phone" required class="register_input" /><span class="barra"></span>
              <label class="register-label">Telefono</label>
            </div>
            <div class="campo">
              <input class="register_input" type="date" id="fecha" name="fDnacimiento" required />
            </div>
            <div class="campo">
              <input class="register_input" type="password" minlength="8" id="nombre" name="name" required /><span
                class="barra"></span>
              <label class="register-label">Contraseña</label>
            </div>
          </div>
          </div>
          <button class="enter-btn" type="submit" id="enter">Eliminar perfil</button>
        </form>
      </main>
      <%- include('../partials/footer') %>
  </body>

  </html>
